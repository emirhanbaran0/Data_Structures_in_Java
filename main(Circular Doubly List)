package CircularDoublyList;

import java.util.Scanner;

public class main {

	public static void main(String[] args) {
		
		ListStructure list=new ListStructure();
		int decision=-1;
		Scanner scan=new Scanner(System.in);
		while(decision>=0 && decision<=8)
		{
			System.out.println("0-Exit");
			System.out.println("1-Add Head");
			System.out.println("2-Add Tail");
			System.out.println("3-Add Node");
			System.out.println("4-Delete Head");
			System.out.println("5-Delete Head");
			System.out.println("6-Delete Head");
			System.out.println("7-Show the List");
			System.out.println("8-Show the reverse of list");
			System.out.println("Enter your decision:  ");
			decision=scan.nextInt(); scan.nextLine();
			
			switch(decision)
			{
			case 1:
				list.addHead(); 
				break;
			case 2:
				list.addTail();
				break;
			case 3:
				list.addNode();
				break;
			case 4:
				list.deleteHead(); 
				break;
			case 5:
				list.deleteTail();
				break;
			case 6:
				list.deleteNode(); 
				break;
			case 7:
				list.showtheList();
				break;
			case 8:
				list.showListReverse();
				break;
			default :
				System.out.println("Your choice is invalid please enter an valid choice!");
			}
		}

	}

}
