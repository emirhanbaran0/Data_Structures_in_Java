import java.util.Scanner;

public class test {

	public static void main(String[] args) {
		int choice,id,grade;
		String name,surname;
		
		Scanner scan=new Scanner(System.in);
		
		StudentStructure sS1=new StudentStructure();
		/*sS1.root=sS1.insertStudent(sS1.root, 10, 90, "Emirhan", "Baran");
		sS1.root=sS1.insertStudent(sS1.root, 8, 80, "Burak", "Gül");
