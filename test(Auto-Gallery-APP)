import java.util.Scanner;

public class test {

	public static void main(String[] args) {
		ListStructure listofAuto=new ListStructure();

		int secim=-1;
		Scanner scan=new Scanner(System.in);
		while(secim>0 && secim>4)
		{
			System.out.println("0-Exit");
			System.out.println("1-Add Auto");
			System.out.println("2-Delete Auto");
			System.out.println("3-Find the Car");
			System.out.println("4-Show all of the Car");
			System.out.println("Decision: "); secim=scan.nextInt();
			switch(secim)
			{
			case 1: listofAuto.addAuto();
				break;
			case 2:  listofAuto.deleteAuto();
				break;
			case 3:  listofAuto.findAuto();
				break;
			case 4:  listofAuto.showList();
				break;
			default: 
				System.out.println("You choose an invalid decision please ente the valid decision!");
			}
		}
	}

}
